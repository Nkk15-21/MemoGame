<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MemoGame.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Memo Game">

    <VerticalStackLayout Spacing="16" Padding="24">
        <Label Text="MEMO" FontSize="36" FontAttributes="Bold" HorizontalOptions="Center"/>
        <Image Source="dotnet_bot.png" IsVisible="False"/>
        <!-- декоративно, можно убрать -->

        <Entry x:Name="NameEntry" Placeholder="Имя игрока" TextColor="{DynamicResource TextColor}" />
        <Button Text="Начать игру" Clicked="StartClicked"/>
        <Button Text="Настройки (темы)" Clicked="SettingsClicked"/>
        <Button Text="Рекорды" Clicked="LeaderboardClicked"/>

        <Label x:Name="BestLabel" FontSize="14" Opacity="0.8" />
    </VerticalStackLayout>
</ContentPage>
