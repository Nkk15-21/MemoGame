<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MemoGame.Views.GamePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Игра">

    <Grid RowDefinitions="Auto,Auto,*" Padding="16" RowSpacing="12">

        <!-- Панель статуса -->
        <HorizontalStackLayout Grid.Row="0" Spacing="16">
            <Label x:Name="PlayerLabel" FontAttributes="Bold"/>
            <Label x:Name="MovesLabel"/>
            <Label x:Name="MatchesLabel"/>
        </HorizontalStackLayout>

        <!-- Кнопки управления -->
        <HorizontalStackLayout Grid.Row="1" Spacing="12">
            <Button Text="Заново" Clicked="RestartClicked"/>
            <Button Text="Назад" Clicked="BackClicked"/>
        </HorizontalStackLayout>

        <!-- Сетка игры (создаётся динамически из кода) -->
        <Grid x:Name="BoardGrid" Grid.Row="2" RowSpacing="8" ColumnSpacing="8"/>
    </Grid>
</ContentPage>
